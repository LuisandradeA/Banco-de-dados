@model Empregado
@{
    ViewData["Title"] = "Empregado";

}

<div class="text-center">
    <h1 class="display-4">Editar Empregado @Model.Nome</h1>
</div>


<form asp-action="EditarEmpregadoAction" asp-controller="Empregado" method="post"> 
   <div> 
      <label asp-for = "Nome"></label> 
      <input asp-for = "Nome" class="form-control" name="Nome" value="@Model.Nome" placeholder="Nome"/> 
     
   </div> 
   <br>
   <div> 
      <label asp-for = "Codigo"></label> 
      <input readonly asp-for = "Codigo" name="Codigo" class="form-control" value="@Model.Codigo" placeholder="Codigo"/> 
     
   </div> 
<br>
<div> 
      <label asp-for = "NomeDoMeio"></label> 
      <input asp-for = "NomeDoMeio" name="NomeDoMeio" class="form-control" value="@Model.NomeDoMeio" placeholder="NomeDoMeio"/> 
     
   </div> 
<br>
<div> 
      <label asp-for = "SobreNome"></label> 
      <input asp-for = "SobreNome" name="SobreNome" class="form-control" value="@Model.SobreNome" placeholder="SobreNome"/> 
     
   </div> 
<br>
<div> 
      <label asp-for = "Endereco"></label> 
      <input asp-for = "Endereco" name="Endereco" class="form-control" value="@Model.Endereco" placeholder="Endereco"/> 
     
   </div> 
<br>
<div> 
      <label asp-for = "Sexo"></label> 
      <input asp-for = "Sexo" name="Sexo" class="form-control" value="@Model.Sexo" placeholder="Sexo"/> 
     
   </div> 
<br>
<div> 
      <label asp-for = "Salario"></label> 
      <input asp-for = "Salario" name="Salario" class="form-control" value="@Model.Salario" placeholder="Salario"/> 
     
   </div> 
<br>
<div> 
      <label asp-for = "Gerente"></label> 
      <input asp-for = "Gerente" name="Gerente" class="form-control" value="@Model.Gerente" placeholder="Gerente"/> 
     
   </div> 
<br><div> 
      <label asp-for = "Departamento"></label> 
      <input asp-for = "Departamento" name="Departamento" class="form-control" value="@Model.Departamento" placeholder="Departamento"/> 
     
   </div> 
<br>
<div> 
      <label asp-for = "Dtnascimento"></label> 
      <input asp-for = "Dtnascimento"  name="Dtnascimento" class="form-control" value="@Model.Dtnascimento" placeholder="Dtnascimento"/> 
     
   </div> 
<br>
   <div> 
      <br>
      <input type = "submit" value = "Adicionar"  class="btn btn-primary"/> 
     
   </div> 
</form>
